@page "specificationId"
@model Gearwise.Pages.GearwisePediaCreateModel
@{
}
<h2>Maak een GearwisePedia aan</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="GearwisePedia.Title"></label>
        <input asp-for="GearwisePedia.Title" class="form-control" />
        <span asp-validation-for="GearwisePedia.Title" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <label asp-for="GearwisePedia.Body"></label>
        <textarea asp-for="GearwisePedia.Body" class="form-control" rows="6"></textarea>
        <span asp-validation-for="GearwisePedia.Body" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Opslaan</button>
    <a asp-page="/Index" class="btn btn-outline-danger">Terug</a>
</form>