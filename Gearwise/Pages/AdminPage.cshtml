@page
@model Gearwise.Pages.AdminPageModel
@{
    ViewData["Title"] = "Admin page";
}

<h1>Dit is de admin page</h1>

<div>
    <form>
        <a asp-page="/AdminPage" asp-route-view="ManageUsers" class="btn btn-primary">Beheer Gebruikers</a>
        <a asp-page="/AdminPage" asp-route-view="ManageAdverts" class="btn btn-primary">Beheer Advertenties</a>
        <a asp-page="/AdminPage" asp-route-view="ManageBrands" class="btn btn-primary">Beheer Merken</a>
        <a asp-page="/AdminPage" asp-route-view="ManageCategories" class="btn btn-primary">Beheer Categorieën</a>
    </form>
</div>

@if (Model.View == "ManageUsers")
{
    <h3>Users</h3>
    <div>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>First name</th>
                    <th>Last name</th>
                    <th>Email</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var u in Model.Users)
                {
                    <tr>
                        <td>@u.UserId</td>
                        <td>@u.FirstName</td>
                        <td>@u.LastName</td>
                        <td>@u.Email</td>
                        <td>
                            <div class="d-flex gap-2">
                                <form method="post" asp-page-handler="VerwijderUser">
                                    <input type="hidden" name="id" value="@u.UserId" />
                                    <button class="btn btn-danger">Verwijder</button>
                                </form>

                                <form method="post" asp-page-handler="UpdateUser">
                                    <input type="hidden" name="id" value="@u.UserId" />
                                    <button class="btn btn-primary">Update</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

