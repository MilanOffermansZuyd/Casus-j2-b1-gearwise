                                    <input type="hidden" name="id" value="@a.AdvertId" />
                                    <button class="btn btn-danger">Verwijder</button>
                                </form>

                                <form method="post" asp-page-handler="UpdateAdvert">
                                    <input type="hidden" name="id" value="@a.AdvertId" />
                                    <button class="btn btn-primary">Update</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

