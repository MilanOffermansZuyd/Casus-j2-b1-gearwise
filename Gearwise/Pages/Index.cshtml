@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}    

<h1>Adverts</h1>

<a class="btn btn-outline-primary float-end">
    Login / sign-up
</a>

@if (Model.Adverts is not null)
{

    <div class="container mt-4">
        <div class="row">
            @foreach (var item in Model.Adverts)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">@item.Title</h5>
                            <p class="card-text">
                                Merk:@item.Brand.Name <br />
                                Categorie:@item.Category.Name <br />
                                Verkoper: @item.Seller.FirstName <br />
                                Producten: @item.Products.Count
                            </p>
                        </div>
                        <div class="card-footer text-end bg-transparent border-top-0">
                            <a class="btn btn-sm btn-primary">Bekijk</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

}